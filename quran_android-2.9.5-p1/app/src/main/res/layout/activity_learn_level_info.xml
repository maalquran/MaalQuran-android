<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".salamquran.Learn.LearnActivity_level_info">


  <include
      android:visibility="gone"
      android:layout_centerInParent="true"
      android:id="@+id/itemTryAgain"
      layout="@layout/item_try_again"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>

  <ProgressBar
      android:id="@+id/progress"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <RelativeLayout
      android:visibility="visible"
      android:id="@+id/box_learn"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/quran_row_background"
        android:id="@+id/box_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

      <ImageView
          android:id="@+id/image_video"
          android:src="@drawable/salamquran"
          android:scaleType="centerCrop"
          android:tint="#9F000000"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      <ImageView
          android:src="@drawable/ic_play_cicle"
          android:layout_centerInParent="true"
          android:tint="#fff"
          android:layout_width="@dimen/_80sdp"
          android:layout_height="@dimen/_80sdp"/>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/cardview_title"
        android:layout_below="@id/box_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="-20dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:text="@string/app_name"
            android:textSize="@dimen/_14ssp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_desc"
        android:visibility="visible"
        android:layout_below="@id/cardview_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_15sdp">
      <RelativeLayout
          android:padding="@dimen/_5sdp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/desc"
            android:text="@string/app_name"
            android:textSize="@dimen/_12ssp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
      </RelativeLayout>
    </androidx.cardview.widget.CardView>

  </RelativeLayout>



</RelativeLayout>
