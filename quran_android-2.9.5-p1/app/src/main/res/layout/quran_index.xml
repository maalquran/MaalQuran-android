<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="?attr/colorPrimary"
        style="@style/ToolBarArea"/>

  <LinearLayout
      android:id="@+id/linear_quran_list"
      android:layout_below="@id/toolbar"
      android:layout_above="@+id/bottom_navigation"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.ermile.salamquran.android.widgets.SlidingTabLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        style="@style/ToolBarArea"
        />
    <com.ermile.salamquran.android.widgets.QuranViewPager
        android:id="@+id/index_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

  </LinearLayout>

  <FrameLayout
      android:id="@+id/frame_layout"
      android:layout_below="@id/toolbar"
      android:layout_above="@+id/bottom_navigation"
      android:layout_centerInParent="true"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  </FrameLayout>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom"
      app:itemIconTint="@drawable/sq_menu_colorselector_bottom_navigation"
      app:itemTextColor="#D8FFFFFF"
      app:menu="@menu/sq_bottomnav_main_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
</RelativeLayout>
