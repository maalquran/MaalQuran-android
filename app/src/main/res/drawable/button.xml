<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FFEB3B"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#B4B4B4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF9800"
                android:startColor="#FF9800"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#B4B4B4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#03A9F4"
                android:startColor="#fff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#fff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>