<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#636262"
    android:gravity="center|left"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:minHeight="60dp"
    android:id="@+id/rootItem_hizb"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">

    <!--Number Sureh-->

    <TextView
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:id="@+id/number_hizb"
        android:textAlignment="center"
        android:backgroundTint="#DDDDDD"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/hezb_1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute" />



    <!--Title Sureh-->
    <LinearLayout
        android:layout_toEndOf="@+id/page_hizb"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center|start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_hizb"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="بسم الله الرحمن الرحیم"
            android:fontFamily="@font/iransans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/decs_hizb"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Make - 7 aya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Page in Surah-->
    <TextView
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:id="@+id/page_hizb"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
