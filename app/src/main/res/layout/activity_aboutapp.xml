<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".statice.AboutApp">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imgvLogo_AboutApp"
        android:src="@drawable/logo_salamquran"
        android:layout_width="200dp"
        android:layout_height="200dp" />


    <LinearLayout
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle_AboutApp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="@string/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvSlogan_AboutApp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="@string/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvDesc_AboutApp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:fontFamily="@font/iransans_ultralight"
            android:textColor="#000"
            android:text="@string/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvVersion_AboutApp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Version 5.6.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>