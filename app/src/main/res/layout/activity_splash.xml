<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:id="@+id/mainView_Splash"
    tools:context=".Actitvty.ac_Splash.Splash"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">
            <ImageView
                android:id="@+id/Logo_laysplash"
                android:src="@drawable/logo_salamquran"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/title_laysplash"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/iransans"
                android:text="@string/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/desc_laysplash"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/iransans"
                android:text="@string/slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/progress_laysplash"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/titleProgress_laysplash"
                android:textAlignment="center"
                android:textSize="8sp"
                android:textColor="#000"
                android:fontFamily="@font/iransans"
                android:text="درحال اتصال.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/boxUseOffline"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="You'r Offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnUseOffline"
            android:text="Use offline"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>