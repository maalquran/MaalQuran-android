<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actitvty.Quran">


    <!--View Pager Quran-->
    <com.duolingo.open.rtlviewpager.RtlViewPager
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layoutDirection="rtl"
        android:id="@+id/view_pagers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--Description Page-->
    <RelativeLayout
        android:visibility="visible"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:orientation="horizontal">
        <!--Vars-->
        <TextView
            android:id="@+id/top_title_vers"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_7ssp"
            android:textDirection="rtl"
            android:text="Surat al fatehe"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--Aya-->
        <TextView
            android:fontFamily="@font/surah_names"
            android:id="@+id/top_title_juz"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/_7ssp"
            android:textDirection="ltr"
            android:text="Juz 1"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <!--Media Controller-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_pageQuran"
            android:text="1"
            android:textColor="#363636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:alpha="0.7"
        android:id="@+id/media_contoroler"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#4D000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/btn_bakc"
            android:src="@drawable/ic_fast_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/btn_stop"
            android:src="@drawable/ic_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/btn_play"
            android:src="@drawable/ic_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/btn_pause"
            android:src="@drawable/ic_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/btn_next"
            android:src="@drawable/ic_fast_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</RelativeLayout>