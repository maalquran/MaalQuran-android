<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actitvty.Quran">


    <LinearLayout
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="1dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_juzQuran"
            android:textSize="12sp"
            android:textDirection="rtl"
            android:text="Surat al fatehe"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title_surahQuran"
            android:textSize="12sp"
            android:textDirection="ltr"
            android:text="Juz 1"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <com.duolingo.open.rtlviewpager.RtlViewPager
        android:layoutDirection="rtl"
        android:id="@+id/view_pagers"
        android:layout_width="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <LinearLayout
            android:id="@+id/audio_stop"
            android:background="#66FF0000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="STOP"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/audio_play"
            android:background="#570067C2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="Play"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/number_pageQuran"
            android:text="1"
            android:textColor="#363636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>








</LinearLayout>