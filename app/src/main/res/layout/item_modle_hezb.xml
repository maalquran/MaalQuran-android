<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#636262"
    android:gravity="center|left"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:minHeight="70dp"
    android:id="@+id/rootItem_hizb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Number Sureh-->

    <TextView
        android:gravity="center"
        android:id="@+id/number_hizb"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/hezb_1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <!--Title Sureh-->
    <LinearLayout
        android:gravity="center|left"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_hizb"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="بسم الله الرحمن الرحیم"
            android:fontFamily="@font/iransans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/decs_hizb"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Make - 7 aya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Page in Surah-->
    <TextView
        android:id="@+id/page_hizb"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>
