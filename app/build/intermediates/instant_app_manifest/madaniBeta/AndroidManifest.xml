<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salamquran.android"
    android:installLocation="auto"
    android:targetSandboxVersion="2"
    android:versionCode="5"
    android:versionName="5.0.0-beta" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- foreground services need this when targeting Android 9+ (Api 28+) -->
    <uses-permission-sdk-23 android:name="android.permission.FOREGROUND_SERVICE" /> <!-- support chromebooks without touch screen -->


    <!-- salamquran -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name="com.salamquran.android.QuranApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:fullBackupContent="@xml/backup"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Quran" >
        <activity
            android:name="com.salamquran.android.Splash"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.salamquran.android.QuranDataActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/QuranToolBar" >
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name="com.salamquran.android.ShortcutsActivity"
            android:exported="true" />
        <activity
            android:name="com.salamquran.android.ui.QuranActivity"
            android:theme="@style/QuranToolBar" />
        <activity
            android:name="com.salamquran.android.AboutUsActivity"
            android:theme="@style/QuranToolBar" />
        <activity android:name="com.salamquran.android.HelpActivity" />
        <activity
            android:name="com.salamquran.android.ui.PagerActivity"
            android:launchMode="singleTop"
            android:theme="@style/QuranToolBar.Overlay" />
        <activity
            android:name="com.salamquran.android.ui.TranslationManagerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.salamquran.android.QuranPreferenceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/QuranToolBar" />
        <activity
            android:name="com.salamquran.android.QuranAdvancedPreferenceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/QuranToolBar" />
        <activity
            android:name="com.salamquran.android.SearchActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="com.salamquran.android.QuranForwarderActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="quran" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.salamquran.android.ui.AudioManagerActivity"
            android:theme="@style/Quran" /> <!-- declare the default searchable Activity for the whole app -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchActivity" /> <!-- provides search suggestions for verses. -->
        <provider
            android:name="com.salamquran.android.data.QuranDataProvider"
            android:authorities="@string/authority"
            android:exported="false" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_authority"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver android:name="androidx.media.session.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <activity android:name="com.salamquran.android.QuranImportActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/json" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.backup"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\..*\\.backup"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\..*\\..*\\.backup"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\..*\\..*\\..*\\.backup"
                    android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.salamquran.android.pageselect.PageSelectActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service
            android:name="com.salamquran.android.service.QuranDownloadService"
            android:enabled="true" />
        <service
            android:name="com.salamquran.android.service.AudioService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>
    </application>

</manifest>